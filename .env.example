BOT_TOKEN=your_bot_token_from_@BotFather
AUTH_PASSWORD=your_auth_password
# For local dev: leave WEBHOOK_URL unset and set NGROK_AUTHTOKEN (https://dashboard.ngrok.com/get-started/your-authtoken)
# For production: set WEBHOOK_URL to your public HTTPS URL
WEBHOOK_URL=
NGROK_AUTHTOKEN=
PORT=8080
# Set DEV=1 for local dev to auto-restart bot when code changes
# DEV=1

# Optional: cap video duration for testing (seconds). e.g. 600 = first 10 minutes only
# VIDEO_CAP_SEC=600

# Dev only: send dubbed video back after processing (0=off, 1=on)
# SEND_VIDEO_AFTER_DONE=0
